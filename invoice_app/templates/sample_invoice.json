{
  "template": {
    "title": "ACME Consulting Invoice",
    "label": "INVOICE",
    "currency": "$",
    "accent_color": "#2563eb",
    "security": {
      "options": [
        "diagonal_lines",
        "watermark"
      ],
      "watermark": "Sample"
    },
    "page": {
      "width": "940px",
      "height": "auto",
      "padding": "32px",
      "background_color": "#f8fafc",
      "background_image": "",
      "orientation": "portrait",
      "border_radius": "18px"
    },
    "font": {
      "family": "Inter",
      "color": "#0f172a",
      "size": 14
    },
    "logo": {
      "src": "https://dummyimage.com/240x70/111827/ffffff&text=ACME+Consulting",
      "height": "64px",
      "alt": "ACME Consulting"
    },
    "sections": [
      {
        "type": "grid",
        "title": "Invoice details",
        "columns": 2,
        "gap": "12px",
        "fields": [
          { "label": "Invoice #", "value_path": "invoice.number" },
          { "label": "Date", "value_path": "invoice.date" },
          { "label": "Due date", "value_path": "invoice.due_date" },
          { "label": "Reference", "value_path": "invoice.reference", "placeholder": "â€”" }
        ]
      },
      {
        "type": "panels",
        "title": "Parties",
        "panels": [
          {
            "heading": "From",
            "fields": [
              { "label": "Company", "value_path": "seller.name" },
              { "label": "Contact", "value_path": "seller.contact" },
              { "label": "Email", "value_path": "seller.email" },
              { "label": "Address", "value_path": "seller.address" }
            ]
          },
          {
            "heading": "Bill to",
            "fields": [
              { "label": "Company", "value_path": "client.name" },
              { "label": "Contact", "value_path": "client.contact" },
              { "label": "Email", "value_path": "client.email" },
              { "label": "Address", "value_path": "client.address" }
            ]
          }
        ]
      },
      {
        "type": "table",
        "title": "Line items",
        "data_path": "items",
        "columns": [
          { "label": "Description", "key": "description", "width": "45%" },
          { "label": "Qty", "key": "qty", "align": "center" },
          { "label": "Unit price", "key": "unit_price", "format": "currency", "align": "right" },
          { "label": "Total", "key": "line_total", "format": "currency", "align": "right" }
        ],
        "totals": [
          { "label": "Subtotal", "value_path": "totals.subtotal", "format": "currency" },
          { "label": "Tax 10%", "value_path": "totals.tax", "format": "currency" },
          {
            "label": "Amount due",
            "value_path": "totals.due",
            "format": "currency"
          }
        ]
      },
      {
        "type": "grid",
        "title": "Payment",
        "columns": 2,
        "fields": [
          { "label": "Bank", "value_path": "payment.bank" },
          { "label": "IBAN", "value_path": "payment.iban" },
          { "label": "Reference", "value_path": "payment.reference" },
          { "label": "Due date", "value_path": "invoice.due_date" }
        ]
      },
      {
        "type": "notes",
        "title": "Notes",
        "value_path": "notes"
      }
    ]
  },
  "data": {
